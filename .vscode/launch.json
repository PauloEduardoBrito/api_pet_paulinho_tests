        "version": "0.2.0",
        "configurations": [
            {
                "name": "Listen for rdebug-ide",
                "type": "Ruby",
                "request": "attach",
                "remoteHost": "0.0.0.0",
                "remotePort": "1234",
                "remoteWorkspaceRoot": "${workspaceRoot}"
            },
            {
                "name": "RSpec - active spec file only",
                "type": "Ruby",
                "request": "launch",
                "program": "${env:RUBY_HOME}/bin/rspec",
                "args": [
                    "-I",
                    "${workspaceRoot}",
                    "${file}:${lineNumber}"
                ]
            }
        ]
       }